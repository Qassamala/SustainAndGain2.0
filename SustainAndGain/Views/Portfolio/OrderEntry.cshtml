@model SustainAndGain.Models.ModelViews.OrderVM



<div class="section hpanel leftpan">
        <div class="background-img">

        </div>
    </div>
    <div class="section hpanel rightpan">
        <div class="background-img">

        </div>
    </div>



<div class="container">
    <div class="row">
        <div class="col-lg-4">

            <h4>Orders will be executed 09:05 CET, 13:05 CET and 17:30 CET</h4>

        </div>
        <div class="col-lg-3">

            <label asp-for="AvailableToInvest" class="control-label"></label>
            @Html.DisplayFor(modelItem => Model.AvailableToInvest) kr


        </div>
        <div class="col-lg-3">
            <label asp-for="LastPrice" class="control-label"></label>
            @Html.DisplayFor(modelItem => Model.LastPrice) kr

            <span asp-validation-for="CompetitionId" class="text-danger"></span>
        </div>
    </div>
</div>


<form class="form-inline" asp-action="OrderEntry">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-2">

        <label asp-for="CompanyName" class="control-label"></label>
        <input asp-for="CompanyName" class="form-control" readonly />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Symbol" class="control-label"></label>
        <input asp-for="Symbol" class="form-control" readonly />
        <span asp-validation-for="Symbol" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="OrderValue" class="control-label"></label>
        <input asp-for="OrderValue" class="form-control" />
        <span asp-validation-for="OrderValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" name="CompetitionId" value="@Model.CompetitionId" />
    </div>
    <div class="form-group mb2">
        <input type="submit" value="Place buy order" class="btn btn-primary mb-2" />
    </div>
</form>

