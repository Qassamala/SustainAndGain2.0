@model SustainAndGain.Models.ModelViews.OrderVM

<h4>OrderVM</h4>

<label asp-for="AvailableToInvest" class="control-label"></label>
@Html.DisplayFor(modelItem => Model.AvailableToInvest)

<label asp-for="LastPrice" class="control-label"></label>
@Html.DisplayFor(modelItem => Model.LastPrice)

<span asp-validation-for="CompetitionId" class="text-danger"></span>

<input type="hidden" name="name_default" value="name_default" />



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderEntry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Symbol" class="control-label"></label>
                <input asp-for="Symbol" class="form-control" />
                <span asp-validation-for="Symbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderValue" class="control-label"></label>
                <input asp-for="OrderValue" class="form-control" />
                <span asp-validation-for="OrderValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyOrSell" class="control-label"></label>
                <input asp-for="BuyOrSell" class="form-control" />
                <span asp-validation-for="BuyOrSell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="CompetitionId" value="@Model.CompetitionId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

