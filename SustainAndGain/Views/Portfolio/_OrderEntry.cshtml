@model SustainAndGain.Models.ModelViews.OrderVM
    <style>
        .container {
            max-width: 100%;
            animation: opacity 1s ease-in-out;
            padding-bottom: 5vh;
        }

        .row {
            justify-content: flex-end;
            margin-right: 10vh;
        }
        

        .col-lg-3, .col-lg-4 {
            padding: 4vh;
            margin: 2vh;
            position: relative;
            text-align: center;
            position: relative;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid rgba(0,0,0,.125);
            border-radius: .25rem;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,.06);
        }
    </style>


<div class="container">
    <div class="row">
        <div class="col-lg-4">

            <h4>Orders will be executed 09:05 CET, 13:05 CET and 17:30 CET</h4>

        </div>
        <div class="col-lg-3">

            <label asp-for="AvailableToInvest" class="control-label"></label>
            @Html.DisplayFor(modelItem => Model.AvailableToInvest) kr


        </div>
        <div class="col-lg-3">
            <label asp-for="LastPrice" class="control-label"></label>
            @Html.DisplayFor(modelItem => Model.LastPrice) kr

            <span asp-validation-for="CompetitionId" class="text-danger"></span>
        </div>
    </div>
    </div>
